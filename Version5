<head>
<script type="text/javascript" charset="utf-8"> 
 
 
 function checkBox(checkBoxElement) {
     sessionStorage.setItem(checkBoxElement.id, "0")
     if (checkBoxElement.checked) {
       sessionStorage.setItem(checkBoxElement.id, "1")
     } else {
       sessionStorage.setItem(checkBoxElement.id, "0")
     }
     var testoutput = sessionStorage.getItem(checkBoxElement.id)
     document.write(checkBoxElement.id)
  }


  function renderNote() {
    if (sessionStorage.check1a == 1) {
      var text = "Resident did that thing as evidenced by"
    } else {
      var text = "Resident did NOT do that thing as evidenced by"
    }
    document.write("<br>")
    document.write(text)
  }

function generateForms(){
   number = Number(document.getElementById('number').value)
     CHECK1 = [
     {id: "check1a"},
     {id: "check1b"}
     ]
     TEXT1 = [
    {"id": "lol", "label": "lol"},
    {"id": "lol2", "label": "lol2"}
  ]
  for (i = 0; i < number; i++) {
    formHTML = "<input id='" + TEXT1[i].id + "' name=" + TEXT1[i].label + ">"
   checkHTML = "<input type='checkbox' name='ontime' id='" + CHECK1[i].id + "' onchange='checkBox(this)'>"
      document.write(checkHTML)
      document.write(formHTML)
      document.write("<br>")
  }
 document.write("<button type='button' onclick='renderNote()'>Render</button>")
}
</script>
</head>
<body>
<h2>How Many Clients?</h2>
<input id="number" type="text" >
<button type="button" onclick="generateForms()">Render</button>
</body>

